<form method="get" action="{{ url('catalog') }}">
    <select name="category">
        <option value="">All Categories</option>
        {% for category in craft.categories.group('categoriesGroup').all() %}
            <option value="{{ category.slug }}" {% if craft.app.request.getQueryParam('category') == category.slug %}selected{% endif %}>
                {{ category.title }}
            </option>
        {% endfor %}
    </select>
    <button type="submit">Filter</button>
</form>
